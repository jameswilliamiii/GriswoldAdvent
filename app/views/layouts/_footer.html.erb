<div id="footer">
  <div class="container">
		<div class='row-fluid'>
			<h3 class='charity-water'>If you enjoyed, please help out and donate to our
				<a style='color:yellow'href="http://mycharitywater.org/griswoldadvent">charity:water campaign</a>.
			</h3>
		</div>
		<div class='row-fluid'>
			<div class='span12'>
				<% if @quotes.present? %>
					<span class= 'past-dates'>
						<strong>Previous quotes: <br/></strong>|
						<% @quotes.each do |quote| %> 
							<%= link_to quote.show_date, daily_quote_path(quote) %> |
						<% end %>
					</span>
				<% end %>
			</div>
		</div>
  </div>
</div>