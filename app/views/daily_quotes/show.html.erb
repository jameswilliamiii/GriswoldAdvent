<div class='row-fluid'>
	<div class='span3'>
		<span class='date effect'>
		  <%= Date.today %>
		</span>
	</div>
	<div class='span9'>
		<span class= 'past-dates pull-right'>
			<strong>Previous quotes: </strong>|
			<% @quotes.each do |quote| %> 
				<%= link_to quote.show_date, '#' %> |
			<% end %>
		</span>
	</div>
</div>

<div class='row-fluid'>
	<div class='span12'>
		<span class='quotes'>
		  <%= @daily_quote.quote %>
		</span>
	</div>
</div>


