<div class='row-fluid'>
	<div class='span12'>
		<span class='date effect'>
		  <%= Date.today %>
		</span>
	</div>
</div>

<div class='row-fluid'>
	<div class='span12'>
		<span class='quotes'>
		  <%= @daily_quote.quote %>
		</span>
	</div>
</div>

<div class='spacer'></div>

<div class='row-fluid'>
	<div class='span12'>
		<span class= 'past-dates'>
			<strong>Previous quotes: <br/></strong>|
			<% @quotes.each do |quote| %> 
				<%= link_to quote.show_date, '#' %> |
			<% end %>
		</span>
	</div>
</div>


